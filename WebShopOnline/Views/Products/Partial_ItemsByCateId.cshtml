@model IEnumerable<WebShopOnline.Models.Entity.Product>

@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <!-- Product 1 -->
        var strImg = "";
        var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
        if(img != null)
        {
            strImg = img.Image;
        }
        <div class="product-item @item.ProductCategory.Alias" style="margin-bottom: 60px;">
            <div class="product discount product_filter">
                <div class="product_image">
                    <a href="/chi-tiet/@item.Alias-p@(item.Id)">
                        <img src="@strImg" alt="@item.Title" style="width:221px; height: 331px">
                    </a>
                </div>
                <div class="favorite favorite_left"></div>
                @if (item.PriceSale > 0)
                {
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-20%</span></div>
                }
                <div class="product_info">
                    <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a></h6>
                    @if (item.PriceSale > 0)
                    {
                        <div class="product_price">@WebShopOnline.Models.Entity.Common.Common.FormatNumber(item.PriceSale, 0)<span>@WebShopOnline.Models.Entity.Common.Common.FormatNumber(item.Price, 0)</span></div>
                    }
                    else
                    {
                        <div class="product_price">@WebShopOnline.Models.Entity.Common.Common.FormatNumber(item.Price, 0)</div>
                    }
                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">Thêm vào giỏ hàng</a></div>
        </div>
    }

}