@model IEnumerable<WebShopOnline.Models.Entity.Posts>
@{
    ViewBag.Title = "Chi tiết bài viết";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<!-- Slider -->
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container">
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="row">
                <div class="col-md-12">
                    <h1 class="title-news"> @item.Description</h1>
                    <p>@item.CreatedDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @item.Description
                </div>
                <div class="col-md-12">
                    @Html.Raw(item.Detail)
                </div>
            </div>
        }
    }

</div>
